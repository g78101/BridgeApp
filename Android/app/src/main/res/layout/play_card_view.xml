<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/playCardView"
    android:clickable="true"
    android:background="#A5000000">

    <Button
        android:id="@+id/playCardBG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"/>

    <View
        android:id="@+id/playCardMain"
        android:layout_width="100dp"
        android:layout_height="152dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/alert_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/playCardNumberText"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintStart_toStartOf="@id/playCardMain"
        app:layout_constraintEnd_toEndOf="@id/playCardMain"
        app:layout_constraintTop_toTopOf="@id/playCardMain"
        />

    <ImageView
        android:id="@+id/playCardFlowerImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/playCardMain"
        app:layout_constraintEnd_toEndOf="@id/playCardMain"
        app:layout_constraintBottom_toBottomOf="@id/playCardMain"/>

    <Button
        android:id="@+id/playCardPlay"
        android:layout_width="132dp"
        android:layout_height="42dp"
        android:background="@drawable/ok_border"
        android:text="Play"
        android:textColor="#333333"
        android:textSize="20sp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/playCardMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>