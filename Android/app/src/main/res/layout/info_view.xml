<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/infoview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/infoView"
        android:layout_width="0dp"
        android:layout_height="487dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:background="@drawable/inforadius">

        <android.support.constraint.Guideline
            android:id="@+id/infoViewline0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <android.support.constraint.Guideline
            android:id="@+id/infoViewline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <android.support.constraint.Guideline
            android:id="@+id/infoViewline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75"/>

        <com.talka.fancybridge.Views.Components.NamesText
            android:id="@+id/infoName"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toTopOf="@id/infoView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ListView
            android:id="@+id/infoCall"
            android:layout_width="0dp"
            android:layout_height="110dp"
            app:layout_constraintTop_toBottomOf="@id/infoName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.talka.fancybridge.Views.Components.NamesText
            android:id="@+id/infoNameThree"
            android:layout_width="0dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/infoCall"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ListView
            android:id="@+id/infoPlay"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@id/infoNameThree"
            app:layout_constraintBottom_toTopOf="@id/infoFlower0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="#FF47BC5E"
            app:layout_constraintBottom_toTopOf="@id/infoFlower0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.talka.fancybridge.Views.Components.FlowerCount
            android:id="@+id/infoFlower0"
            android:layout_width="0dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="@id/infoView"
            app:layout_constraintStart_toStartOf="@id/infoView"
            app:layout_constraintEnd_toEndOf="@id/infoViewline0"/>

        <com.talka.fancybridge.Views.Components.FlowerCount
            android:id="@+id/infoFlower1"
            android:layout_width="0dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="@id/infoView"
            app:layout_constraintStart_toStartOf="@id/infoViewline0"
            app:layout_constraintEnd_toEndOf="@id/infoViewline1"/>

        <com.talka.fancybridge.Views.Components.FlowerCount
            android:id="@+id/infoFlower2"
            android:layout_width="0dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="@id/infoView"
            app:layout_constraintStart_toStartOf="@id/infoViewline1"
            app:layout_constraintEnd_toEndOf="@id/infoViewline2"/>

        <com.talka.fancybridge.Views.Components.FlowerCount
            android:id="@+id/infoFlower3"
            android:layout_width="0dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="@id/infoView"
            app:layout_constraintStart_toStartOf="@id/infoViewline2"
            app:layout_constraintEnd_toEndOf="@id/infoView"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>